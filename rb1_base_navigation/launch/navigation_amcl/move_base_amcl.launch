<?xml version="1.0"?>
<launch>
	
  <arg name="id_robot" default="rb1_base"/>
  <arg name="x_init_pose" default="0"/>
  <arg name="y_init_pose" default="0"/>
  <arg name="z_init_pose" default="0"/>
  <arg name="load_map" default="empty/map_empty.yaml"/>
    
  <group ns="$(arg id_robot)">
	  
	  <arg name="prefix" default="$(arg id_robot)_"/> 
	  
	  <!-- Run the map server -->
	  <node name="map_server" pkg="map_server" type="map_server" args="$(find rb1_base_navigation)/maps/$(arg load_map)">
		<param name="frame_id" value="$(arg prefix)map"/>
	  </node>
	 
	  <!-- Run move_base -->
	  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/move_base_params.yaml" command="load" />
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/teb_local_planner_params.yaml" command="load" />
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find rb1_base_navigation)/$(arg prefix)config_navigation/global_costmap_params_map.yaml" command="load" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" /> 
		<remap from="cmd_vel" to="rb1_base_control/cmd_vel" /> 
		<remap from="odom" to="rb1_base_control/odom" />    
	  </node>
  
  </group>
  
    <!--- Run AMCL -->
	  <include file="$(find rb1_base_navigation)/launch/navigation_amcl/amcl_rb1_base.launch" >
		  <arg name="id_robot" value="$(arg id_robot)"/>
		  <arg name="x_init_pose" value="$(arg x_init_pose)"/>
		  <arg name="y_init_pose" value="$(arg y_init_pose)"/>
		  <arg name="z_init_pose" value="$(arg z_init_pose)"/>
	  </include>
  
</launch>
