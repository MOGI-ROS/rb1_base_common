<?xml version="1.0"?>
<launch>
  <arg name="pad_model" default="ps4"/>
  <!-- joy node -->
  <node pkg="joy" type="joy_node" name="rb1_pad" output="screen" respawn="true">
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.005" />
    <param name="autorepeat_rate" value="10.0" type="double" />
  </node>
  
  <!-- Parameters -->
  <param name="cmd_topic_vel" value="/pad_teleop/cmd_vel" type="string"/>

  <rosparam command="load" file="$(find rb1_base_pad)/launch/$(arg pad_model).yaml" />
  
  <node name="rb1_base_pad" pkg="rb1_base_pad" type="rb1_base_pad" output="screen"/>
   
</launch>

